{
  "name": "micro-frontends-demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:all:dev": "concurrently \"npm run start:dashboard:dev\" \"npm run start:context:dev\" \"npm run start:header:dev\" \"npm run start:auth:dev\" \"npm run start:host:dev\"",
    "start:all:prod": "concurrently \"npm run start:dashboard:prod\" \"npm run start:context:prod\" \"npm run start:header:prod\" \"npm run start:auth:prod\" \"npm run start:host:prod\"",

    "start:dashboard:dev": "concurrently \"cd apps/dashboard && webpack serve --open --mode development\"",
    "start:dashboard:prod": "concurrently \"cd apps/dashboard && webpack serve --mode production\"",
    
    "start:context:dev": "concurrently \"cd shared/context && webpack serve --open --mode development\"",
    "start:context:prod": "concurrently \"cd shared/context && webpack serve --mode production\"",
    
    "start:header:dev": "concurrently \"cd apps/header && webpack serve --open --mode development\"",
    "start:header:prod": "concurrently \"cd apps/header && webpack serve --mode production\"",
    
    "start:auth:dev": "concurrently \"cd apps/auth && webpack serve --open --mode development\"",
    "start:auth:prod": "concurrently \"cd apps/auth && webpack serve --mode production\"",
    
    "start:host:dev": "concurrently \"cd apps/host && webpack serve --open --mode development\"",
    "start:host:prod": "concurrently \"cd apps/host && webpack serve --mode production\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^8.0.1",
    "css-loader": "^6.3.0",
    "dotenv": "^16.1.3",
    "html-webpack-plugin": "^5.3.2",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.57.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.13.10",
    "env-cmd": "^10.1.0",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^4.0.9"
  }
}
